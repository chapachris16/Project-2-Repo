{% layout "layout.liquid" %} {% block content %}
    <div>
        <article>
        <h2>
            {{ manufacturer.name }}
        </h2>
        {%for cars in manufacturer %}
        <a href="/manufacturers/{{manufacturer._id}}/cars/{{manufacturer.cars[forloop.index0]._id}}"><h3>{{ manufacturer.cars[forloop.index0].name}}</h3>
        <img src={{manufacturer.cars[forloop.index0].img}}>
        </a>
        {%endfor%}
        <a href="/manufacturers/{{ manufacturer._id }}/edit"><button>Edit {{manufacturer.name}}</button></a>
        
        <a href="/manufacturers/{{ manufacturer._id }}/new"><button>Enter new vehicle model</button></a>



        <form action="/manufacturers/{{ manufacturer._id }}?_method=DELETE" method="POST">
            <input type="submit" value="Delete {{manufacturer.name}}" />
        </form>
        <a href="/manufacturers/"><button>Back to Manufacturers Index Page</button></a>
        </article>
    </div>
{% endblock %}